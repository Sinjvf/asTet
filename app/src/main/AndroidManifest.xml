<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sinjvf.tetris"
    android:installLocation="preferExternal"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="14"/>
    <application
        android:label="Tetris"
        android:icon="@drawable/logo">
        <activity
                android:name="com.sinjvf.tetris.SignInActivity"
                android:theme="@style/MyStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.sinjvf.tetris.MainActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="com.sinjvf.tetris.ChoiceActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="com.sinjvf.tetris.GameActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="com.sinjvf.tetris.PrintResultsActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="com.sinjvf.tetris.SaveResultsActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="com.sinjvf.tetris.SettingsActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="com.sinjvf.tetris.BackgroundChoiceActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="com.sinjvf.tetris.ComplexityChoiceActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="com.sinjvf.tetris.AboutActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="com.sinjvf.tetris.AboutAppActivity"
            android:theme="@style/MyStyle"/>


        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />-
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
