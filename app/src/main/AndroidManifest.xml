<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.tetris"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14"/>
    <application
        android:label="Tetris"
        android:icon="@drawable/logo">
        <activity
                android:name=".MainActivity"
                android:theme="@style/MyStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="ChoiceActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="GameActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="PrintResultsActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="SaveResultsActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="SettingsActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="BackgroundChoiceActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="ComplexityChoiceActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="AboutActivity"
            android:theme="@style/MyStyle"/>
        <activity android:name="AboutAppActivity"
            android:theme="@style/MyStyle"/>
    </application>

</manifest>
