<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tetris"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <application
        android:icon="@drawable/logo"
        android:label="Tetris" >
        <activity
            android:name="com.example.tetris.MainActivity"
            android:theme="@style/MyStyle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.tetris.ChoiceActivity"
            android:theme="@style/MyStyle" />
        <activity
            android:name="com.example.tetris.GameActivity"
            android:theme="@style/MyStyle" />
        <activity
            android:name="com.example.tetris.PrintResultsActivity"
            android:theme="@style/MyStyle" />
        <activity
            android:name="com.example.tetris.SaveResultsActivity"
            android:theme="@style/MyStyle" />
        <activity
            android:name="com.example.tetris.SettingsActivity"
            android:theme="@style/MyStyle" />
        <activity
            android:name="com.example.tetris.BackgroundChoiceActivity"
            android:theme="@style/MyStyle" />
        <activity
            android:name="com.example.tetris.ComplexityChoiceActivity"
            android:theme="@style/MyStyle" />
        <activity
            android:name="com.example.tetris.AboutActivity"
            android:theme="@style/MyStyle" />
        <activity
            android:name="com.example.tetris.AboutAppActivity"
            android:theme="@style/MyStyle" />
    </application>

</manifest>