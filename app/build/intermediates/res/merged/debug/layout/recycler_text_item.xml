<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_recycler_sect"
        android:textSize="@dimen/text_about_s_size"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_recycler_descript"
        android:textSize="@dimen/text_about_d_size"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:id="@+id/tv_recycler_ll"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_recycler_text"
        android:textSize="@dimen/text_about_t_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:linksClickable="true"
        style="@style/NonClicableTextStyle"
    /></LinearLayout>
    <TextView
        android:id="@+id/tv_recycler_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_about_d_size"
        android:layout_gravity="right"
        android:text="@string/up"
        android:clickable="true"
        >
    </TextView>

</LinearLayout>