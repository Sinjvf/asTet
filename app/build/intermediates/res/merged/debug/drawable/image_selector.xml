<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="@color/background_image_button"
                android:endColor="@color/dark_primary_image_button"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/dark_primary_button"/>
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/background_image_button"
                android:endColor="@color/dark_pressed"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/dark_pressed"/>
            <corners
                android:radius="15dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>